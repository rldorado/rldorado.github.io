---
import Layout from '@/layouts/Layout.astro';
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';
import portrait from '@/assets/portrait.png';
---

<Layout title="Rafael López Dorado - Senior Front-end Engineer">
  <div class="min-h-screen py-16 flex items-center justify-center">
    <div
      class="bg-black bg-opacity-70 p-8 rounded-lg shadow-2xl max-w-4xl w-full mx-4 flex flex-col md:flex-row items-center"
    >
      <div class="md:w-1/2 mb-6 md:mb-0">
        <Image
          src={portrait}
          alt="Rafael López Dorado"
          class="rounded-full w-64 h-64 object-cover mx-auto"
          width={256}
          height={256}
        />
      </div>
      <div class="md:w-1/2 md:pl-8">
        <h1 class="text-4xl font-bold mb-4 text-blue-300">Rafael López Dorado</h1>
        <h2 class="text-2xl text-blue-400 mb-4">Senior Front-end Engineer</h2>
        <p class="text-gray-300 mb-2">
          I fix broken UIs and build scalable front-end architectures.<br>
          If your front-end hurts and you need clarity, reach out.
        </p>
        <div class="flex space-x-4 mb-6 flex justify-center md:justify-start">
          <a
            href="https://github.com/rldorado"
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-600 hover:text-blue-500 transition duration-300"
          >
            <Icon name="mdi:github" class="w-8 h-8" />
          </a>
          <a
            href="https://linkedin.com/in/rldorado"
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-600 hover:text-blue-500 transition duration-300"
          >
            <Icon name="mdi:linkedin" class="w-8 h-8" />
          </a>
          <a
            href="mailto:rldoradodev@gmail.com"
            class="text-gray-600 hover:text-blue-500 transition duration-300"
          >
            <Icon name="mdi:email" class="w-8 h-8" />
          </a>
        </div>
        <a
          href="/CV_FE.pdf"
          download
          class="w-full md:w-auto bg-green-500 text-white px-6 py-2 rounded-full hover:bg-green-600 transition duration-300 inline-flex items-center"
        >
          <Icon name="mdi:download" class="w-5 h-5 mr-2" />
          Download my CV
        </a>
      </div>
    </div>
  </div>
</Layout>
